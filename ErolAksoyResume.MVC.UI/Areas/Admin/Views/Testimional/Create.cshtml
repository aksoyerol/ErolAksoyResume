@model TestimionalAddDto
@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="main-card mb-3 card">
    <div class="card-body">
        <h5 class="card-title">Creating New Testimonial</h5>
        <hr class="dropdown-divider" />
        <br />
        <form asp-action="Create" asp-controller="Testimional" method="post" enctype="multipart/form-data">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>

            <div class="position-relative row form-group">
                <label asp-for="@Model.Name" class="col-sm-2 col-form-label">Name</label>
                <div class="col-sm-10">
                    <input placeholder="Name" class="form-control" asp-for="@Model.Name">
                    <span asp-validation-for="@Model.Name" class="text-danger"></span>
                </div>
            </div>

            <div class="position-relative row form-group">
                <label asp-for="@Model.Title" class="col-sm-2 col-form-label">Title</label>
                <div class="col-sm-10">
                    <input placeholder="Title" class="form-control" asp-for="@Model.Title">
                    <span asp-validation-for="@Model.Title" class="text-danger"></span>
                </div>
            </div>

            <div class="position-relative row form-group">
                <label asp-for="@Model.Text" class="col-sm-2 col-form-label">Text</label>
                <div class="col-sm-10">
                    <input placeholder="Text" class="form-control" asp-for="@Model.Text">
                    <span asp-validation-for="@Model.Text" class="text-danger"></span>
                </div>
            </div>

            <div class="position-relative row form-group">
                <label asp-for="@Model.ImageUrl" class="col-sm-2 col-form-label">Image</label>
                <div class="col-sm-10">
                    <input type="file" name="imgFile" accept=".jpg,.png,.jpeg" class="form-control" asp-for="@Model.ImageUrl">
                    <span asp-validation-for="@Model.ImageUrl" class="text-danger"></span>
                </div>
            </div>

            <div class="custom-checkbox row custom-control form-group">
                <div class="col-md-4">
                    <input type="checkbox" id="exampleCustomCheckbox" asp-for="@Model.IsDraft" class="custom-control-input">
                    <label class="custom-control-label" for="exampleCustomCheckbox">
                        Add to Draft
                    </label>

                </div>
            </div>

            <div class="position-relative row">
                <button type="submit" class="btn btn-primary col-md-6 ">Save</button>
                <a asp-action="Index" asp-controller="Testimional" class="btn btn-warning col-md-6 float-right">Cancel</a>
                @*<div class="col-sm-10 offset-sm-2">
                        <button class="btn btn-secondary">Submit</button>
                    </div>*@
            </div>
        </form>
    </div>

</div>

@section JavaScript{
    <script src="~/jqueryui/jquery-ui.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
    
}
